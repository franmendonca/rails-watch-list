<div class="wrapper">
  <h1>Bookmark</h1>
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <div class="form-inputs">
      <%= f.input :comment %>
    </div>
    <div class="form-inputs">
      <%= f.association :movie %>
    </div>
    <div class="form-actions btn btn-primary">
      <%= f.button :submit %>
    </div>
  <% end %>
  <%= link_to 'Go Back to main lists', root_path, class: "btn btn-success"%>
</div>
